import pandas as pd
import os

directory = '/content/DATA'

ica_data = pd.DataFrame()

for filename in os.listdir(directory):
    if filename.endswith(".csv"):
        filepath = os.path.join(directory, filename)
        temp_df = pd.read_csv(filepath)
        ica_data = pd.concat([ica_data, temp_df], ignore_index=True)

# Display the first few rows of the concatenated DataFrame
print(ica_data.head())

# Display summary statistics
print(ica_data.describe())

# Check for missing values
print(ica_data.isnull().sum())

# Check data types of columns
print(ica_data.dtypes)

# Visualize the distribution of EEG signals or any other relevant features
# You can use libraries like matplotlib or seaborn for visualization

import matplotlib.pyplot as plt
import seaborn as sns

# Set the style of seaborn
sns.set(style="whitegrid")

# Create box plots for each electrode
plt.figure(figsize=(10, 6))
sns.boxplot(data=ica_data)
plt.title('Distribution of EEG Signals Across Electrodes')
plt.xlabel('Electrodes')
plt.ylabel('EEG Signal Amplitude')
plt.xticks(rotation=45)  # Rotate x-axis labels for better readability
plt.show()

# Create violin plots to visualize the distribution of EEG signals for each electrode
plt.figure(figsize=(12, 8))
sns.violinplot(data=ica_data)
plt.title('Distribution of EEG Signals Across Electrodes')
plt.xlabel('Electrodes')
plt.ylabel('EEG Signal Amplitude')
plt.show()

